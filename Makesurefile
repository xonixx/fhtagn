# vim: syntax=bash
@options timing

@define TUSH_REPO='https://github.com/adolfopa/tush'

@goal soft_folder_created @private
@reached_if [[ -d "soft" ]]
  mkdir soft

@goal tush_installed @private
@depends_on soft_folder_created
@reached_if [[ -f "soft/tush/bin/tush-check" ]]
  echo
  echo "Fetching tush..."
  echo

  cd "soft"

  if command -v wget >/dev/null
  then
    wget $TUSH_REPO/archive/master.tar.gz -O./tush.tar.gz
    tar xzvf ./tush.tar.gz
    rm ./tush.tar.gz
    mv tush-master tush
  elif command -v curl >/dev/null
  then
    curl -L $TUSH_REPO/archive/master.tar.gz -o ./tush.tar.gz
    tar xzvf ./tush.tar.gz
    rm ./tush.tar.gz
    mv tush-master tush
  else
    git clone --depth 1 $TUSH_REPO.git
    rm -r tush/.git
  fi

@goal default
@depends_on tested

@goal tested
@depends_on tested_by @args 'tush'
@depends_on tested_by @args 'fhtagn'

@goal tested_by @params TOOL
@depends_on tush_installed
  f=tests/fhtagn.tush

  echo "Testing with $TOOL..."

  test_file() {
    if [[ $TOOL == "tush" ]]
    then
      export PATH="$PATH:$MYDIR/soft/tush/bin"
      DIFF="diff --strip-trailing-cr --ignore-trailing-space" tush-check "$f"
    else
      ./fhtagn.awk "$f"
    fi
  }

  if test_file
  then
    echo "TESTS PASSED : $f"
  else
    echo >&2 "!!! TESTS FAILED !!! : $f"
    exit 1
  fi

